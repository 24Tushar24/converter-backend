# Azure deployment configuration
# Place this in the root of your repository

[build-system]
requires = ["setuptools>=45", "wheel", "pip>=21.0"]

[tool.azure]
# Azure App Service build configuration
python-version = "3.12"
build-command = "pip install --upgrade pip setuptools wheel && pip install -r requirements.txt"
startup-command = "python startup.py"

# Environment for Azure build
[tool.azure.environment]
PYTHONUNBUFFERED = "1"
DEBIAN_FRONTEND = "noninteractive"
